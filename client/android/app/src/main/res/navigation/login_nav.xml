<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.fyp.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_loginFragment_to_register"
            app:destination="@id/register" />
        <action
            android:id="@+id/action_loginFragment_to_registerInformationFragment"
            app:destination="@id/registerInformationFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.fyp.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/register"
        android:name="com.example.fyp.Register"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_register_to_registerInformationFragment"
            app:destination="@id/registerInformationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerInformationFragment"
        android:name="com.example.fyp.RegisterInformationFragment"
        android:label="fragment_register_information"
        tools:layout="@layout/fragment_register_information" >
        <action
            android:id="@+id/action_registerInformationFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
</navigation>